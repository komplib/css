{
	"name": "css",
	"version": "0.25.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/komplib/css.git"
	},
	"scripts": {
		"build:all": "yarn node builder.js --build",
		"build:storybook": "build-storybook",
		"format:prettier": "prettier --write \"**/*.{js,json,yml,yaml,css,scss,less,vue}\" --ignore-unknown",
		"format:stylus": "yarn stylus-supremacy format ./src/**/*.styl --replace --options ./stylus-supremacy.json",
		"format:all": "yarn format:prettier && yarn format:stylus",
		"install:ci": "yarn install --immutable --immutable-cache --check-cache",
		"lint": "yarn eslint --ext **/*.{js,ts} src",
		"postinstall": "husky install",
		"postpack": "pinst --enable",
		"postpublish": "pinst --enable",
		"prepack": "pinst --disable",
		"prepublishOnly": "pinst --disable",
		"semantic-release": "semantic-release",
		"serve:all": "yarn node builder.js --server --watch",
		"serve:storybook": "start-storybook -p 6006",
		"test": "echo \"Error: no test specified\"",
		"test:approve": "backstop approve --config=.backstop.config.js",
		"test:run": "backstop test --config=.backstop.config.js"
	},
	"packageManager": "yarn@3.2.1",
	"devDependencies": {
		"@babel/core": "^7.18.2",
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@mdx-js/react": "^2.1.2",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/release-notes-generator": "^10.0.3",
		"@storybook/addon-actions": "^6.5.9",
		"@storybook/addon-docs": "^6.5.9",
		"@storybook/addon-essentials": "^6.5.9",
		"@storybook/addon-interactions": "^6.5.9",
		"@storybook/addon-links": "^6.5.9",
		"@storybook/addon-viewport": "^6.5.9",
		"@storybook/builder-webpack4": "^6.5.9",
		"@storybook/html": "^6.5.9",
		"@storybook/manager-webpack4": "^6.5.9",
		"@storybook/testing-library": "^0.0.11",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.53.0",
		"babel-loader": "^8.2.5",
		"backstopjs": "^6.1.0",
		"browser-sync": "^2.27.10",
		"chokidar": "^3.5.3",
		"chokidar-cli": "^3.0.0",
		"chromatic": "^6.5.6",
		"csso": "^5.0.3",
		"eslint": "^8.20.0",
		"eslint-config-airbnb-base": "latest",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-storybook": "^0.5.12",
		"glob": "^8.0.3",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.0",
		"node-notifier": "^10.0.1",
		"nodemon": "^2.0.16",
		"npmlog": "^6.0.2",
		"pinst": "^2",
		"prettier": "2.7.0",
		"pug": "^3.0.2",
		"semantic-release": "^19.0.3",
		"simple-json-db": "^2.0.0",
		"storybook-addon-pseudo-states": "^1.15.1",
		"stylus": "^0.58.1",
		"stylus-loader": "^7.0.0",
		"stylus-supremacy": "^2.15.0",
		"yargs": "^17.5.1"
	},
	"resolutions": {
		"glob-parent": "^5.1.2",
		"trim-newlines": "^3.0.1",
		"trim": "^0.0.3"
	},
	"lint-staged": {
		"*.{js,json,yml,yaml,css,scss,less,vue}": "yarn format:prettier"
	}
}
