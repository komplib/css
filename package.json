{
  "name": "css",
  "version": "0.20.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/komplib/css.git"
  },
  "scripts": {
    "build:css": "yarn stylus ./src/index.styl --out ./build/styles --compress ",
    "build:css:dev": "yarn stylus ./src/index.styl --out ./build/styles ",
    "build:doc": "yarn pug src --out ./build",
    "build:storybook": "build-storybook",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml,css,scss,less,vue}\" --ignore-unknown",
    "install:ci": "yarn install --immutable --immutable-cache --check-cache",
    "lint": "yarn eslint --ext **/*.{js,ts} src",
    "postinstall": "husky install",
    "postpack": "pinst --enable",
    "postpublish": "pinst --enable",
    "prepack": "pinst --disable",
    "prepublishOnly": "pinst --disable",
    "semantic-release": "semantic-release",
    "watch:css": "yarn build:css:dev --watch --sourcemap",
    "watch:css:doc": "yarn chokidar \"./src/**/*.styl\" -c \"yarn stylus {path} --out `echo {path} | sed \"s/src/build/\" | sed \"s/index.styl//\"  ` \"",
    "server": "browser-sync start --server ./build --files \"./build/**/*.*\" --directory",
    "watch:doc": "yarn build:doc --watch",
    "watch:css:tokens": "nodemon --watch 'src/**/*' -e js,json --exec \"yarn build:css:dev --watch --sourcemap\"",
    "watch:storybook": "start-storybook -p 6006",
    "test": "echo \"Error: no test specified\""
  },
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@mdx-js/react": "^1.6.22",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-docs": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-viewport": "^6.5.9",
    "@storybook/builder-webpack4": "^6.5.9",
    "@storybook/html": "^6.5.9",
    "@storybook/manager-webpack4": "^6.5.7",
    "@storybook/testing-library": "^0.0.11",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "babel-loader": "^8.2.5",
    "browser-sync": "^2.27.10",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^6.5.6",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "latest",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-storybook": "^0.5.12",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "nodemon": "^2.0.16",
    "pinst": "^2",
    "prettier": "2.7.0",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "pug-runtime": "^3.0.1",
    "semantic-release": "^19.0.3",
    "storybook-addon-pseudo-states": "^1.14.0",
    "stylus": "^0.58.1",
    "stylus-loader": "^4.0.0"
  },
  "resolutions": {
    "pug": "^3.0.2",
    "glob-parent": "^5.1.2",
    "trim-newlines": "^3.0.1",
    "trim": "^0.0.3"
  },
  "lint-staged": {
    "*.{js,json,md,yml,yaml,css,scss,less,vue}": "yarn format"
  }
}
