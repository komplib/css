@layer doc 
  .doc 
    font-family "Nunito Sans", -apple-system, ".SFNSText-Regular", "San Francisco", BlinkMacSystemFont, "Segoe UI", "Helvetica Neue", Helvetica, Arial, sans-serif
  
  .doc .demo 
    background-color #eee
    padding 20px
  
  .doc .row 
    background #007fff
    padding 8px 0
    margin-bottom 8px
    border-radius 5px
  
  .doc .row > * 
    background #036
    border-radius 5px
    text-align center
    color #fff
    min-height 1rem
