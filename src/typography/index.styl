@require '../tokens/'

[class*="font"]
  --fontFamily $cpfontFamilyDefault
  --fontSize $cpfontSizeDefault
  --fontWeight $cpfontWeightRegular
  --fontStyle $cpfontStyleNormal
  --textTransform $cpfontTransformNone
  font var(--fontStyle) var(--fontWeight) var(--fontSize) var(--fontFamily)
  text-transform var(--textTransform)

.font

  &Family
    &Default
      --fontFamily $cpfontFamilyDefault
    &Primary
      --fontFamily $cpfontFamilyPrimary
    &Monospaced
      --fontFamily $cpfontFamilyMonospaced

  &Size
    &Large4
      --fontSize $cpfontSizeLarge4
    &Large3
      --fontSize $cpfontSizeLarge3
    &Large2
      --fontSize $cpfontSizeLarge2
    &Large1
      --fontSize $cpfontSizeLarge1
    &Large
      --fontSize $cpfontSizeLarge
    &Default
      --fontSize $cpfontSizeDefault
    &Small
      --fontSize $cpfontSizeSmall
    &Small1
      --fontSize $cpfontSizeSmall1
    &Small2
      --fontSize $cpfontSizeSmall2

  &Weight
    &Black
      --fontWeight $cpfontWeightBlack
    &ExtraBold
      --fontWeight $cpfontWeightExtraBold
    &Bold
      --fontWeight $cpfontWeightBold
    &SemiBold
      --fontWeight $cpfontWeightSemiBold
    &Medium
      --fontWeight $cpfontWeightMedium
    &Regular
      --fontWeight $cpfontWeightRegular
    &Light
      --fontWeight $cpfontWeightLight
    &ExtraLight
      --fontWeight $cpfontWeightExtraLight
    &Thin
      --fontWeight $cpfontWeightThin
    &Bolder
      --fontWeight $cpfontWeightBolder
    &Lighter
      --fontWeight $cpfontWeightLighter

  &Style
    &Normal
      --fontStyle $cpfontStyleNormal
    &Italic
      --fontStyle $cpfontStyleItalic

  &Transform
    &Uppercase
      --textTransform $cpfontTransformUppercase
    &Lowercase
      --textTransform $cpfontTransformLowercase
    &Capitalize
      --textTransform $cpfontTransformCapitalize
    &None
      --textTransform $cpfontTransformNone
