@require '../tokens/'

@property --CeilLines
	syntax '<integer>'
	initial-value 1
	inherits false

@property --CeilHalfLine
	syntax '<integer>'
	initial-value 1
	inherits false

cp($name, $value = null)
	if ($value)
		{'--' + $name} $value
	else
		convert('var(--' + $name + ')')

fontfamily()
	--FontFamily: $tk.FontFamilyDefault.val
	font-family var(--FontFamily)

fontSize()
	--FontSizeLines 1
	--Baseline: $tk.RhythmVertical.varDef
	--FontSize var(--FontSizeDefault, calc(var(--Baseline) * var(--FontSizeLines)))
	font-size var(--FontSize)

colorText()
	color var(--Color, var(--ColorText, #212529))

lineHeight()
	--CeilLines calc(var(--FontSizeLines))
	--Baseline: $tk.RhythmVertical.varDef
	--LineHeight calc(var(--Baseline) * var(--CeilLines))
	line-height var(--LineHeight)

paddings()
	--PaddingTop calc(var(--PaddingTopLines, 0) * var(--Baseline))
	--PaddingRight calc(var(--PaddingRightLines, 0) * var(--Baseline))
	--PaddingBottom calc(var(--PaddingBottomLines, 0) * var(--Baseline))
	--PaddingLeft calc(var(--PaddingLeftLines, 0) * var(--Baseline))
	padding var(--PaddingTop, 0) var(--PaddingRight, 0) var(--PaddingBottom, 0) var(--PaddingLeft, 0)

margins()
	--MarginTop calc(var(--MarginTopLines, 0) * var(--Baseline))
	--MarginRight calc(var(--MarginRightLines, 0) * var(--Baseline))
	--MarginBottom calc(var(--MarginBottomLines, 0) * var(--Baseline))
	--MarginLeft calc(var(--MarginLeftLines, 0) * var(--Baseline))
	margin var(--MarginTop, 0) var(--MarginRight, 0) var(--MarginBottom, 0) var(--MarginLeft, 0)

[class*='font'], [class*='heading'], [class*='text'], [class*='list'], .paragraph, .blockquote
	fontfamily()
	fontSize()
	lineHeight()
	colorText()
	paddings()
	font-weight var(--FontWeight, 400)
	font-style var(--FontStyle, normal)
	text-transform var(--TextTransform, none)
	text-align var(--TextAlign, inherit, left)
	--Baseline: $tk.RhythmVertical.varDef
	--MarginBottom calc(var(--MarginBottomLines, 0) * var(--Baseline))
	margin 0 0 var(--MarginBottom, 0) 0
	display var(--Display, inherit)

[class*='heading']
	--FontFamily: $tk.FontFamilyHeading.val
	--FontWeight 600
	--CeilHalfLine calc((var(--FontSizeLines) / 2))
	--MarginBottomLines var(--CeilHalfLine)
	--Display block

.font
	&Family
		&Default
			--FontFamily: $tk.FontFamilyDefault.val

		&Heading
			--FontFamily: $tk.FontFamilyHeading.val

		&Monospaced
			--FontFamily: $tk.FontFamilyMonospaced.val

	&Size
		&05
			--FontSizeLines 0.5

		&075
			--FontSizeLines 0.75

		&1
			--FontSizeLines 1

		&2
			--FontSizeLines 2

		&3
			--FontSizeLines 3

		&4
			--FontSizeLines 4

	&Weight
		&9 // Black
			--FontWeight 900

		&8 // ExtraBold
			--FontWeight 800

		&7 // Bold
			--FontWeight 700

		&6 // SemiBold
			--FontWeight 600

		&5 // Medium
			--FontWeight 500

		&4 // Regular
			--FontWeight 400

		&3 // Light
			--FontWeight 300

		&2 // ExtraLight
			--FontWeight 200

		&1 // Thin
			--FontWeight 100

	&Style
		&Normal
			--FontStyle normal

		&Italic
			--FontStyle italic

.text
	&Transform
		&Uppercase
			--TextTransform uppercase

		&Lowercase
			--TextTransform lowercase

		&Capitalize
			--TextTransform capitalize

	&Align
		&Left
			--TextAlign left

		&Center
			--TextAlign center

		&Right
			--TextAlign right

		&Justify
			--TextAlign justify

.heading
	&00
		--FontSizeLines 3.5

	&0
		--FontSizeLines 3.25

	&1
		--FontSizeLines 3

	&2
		--FontSizeLines 2.25

	&3
		--FontSizeLines 1.5

	&4
		--FontSizeLines 1.25

	&5
		--FontSizeLines 1

	&6
		--FontSizeLines 0.875

.paragraph
	--MarginBottomLines 1
	--Display block

	&:last-child
		--MarginBottomLines 0

	& + .blockquote
		--PaddingTopLines 0

.blockquote
	--PaddingTopLines 1
	--PaddingRightLines 1
	--PaddingBottomLines 1
	--PaddingLeftLines 1
	--FontStyle italic

	& + .blockquote
		--PaddingTopLines 0

.list
	margins()
	paddings()
	cp(MarginBottomLines, 1)
	color cp(MarginBottomLines)
	--MarginBottomLines 1
	--ListCounterSeparator ''
	--ListStyleType disc
	counter-reset listCounter
	list-style none

	& > *
		counter-increment listCounter
		margin-bottom calc((var(--Baseline) / 1))

		&:before
			display inline-block
			min-width calc(var(--Baseline) * 1.5)
			margin-right calc((var(--Baseline) / 2))
			margin-left calc(var(--Baseline) * var(--MarginLeft))
			text-align right
			content counter(listCounter, var(--ListStyleType)) var(--ListCounterSeparator)

	.list
		--PaddingTopLines 1
		--MarginBottomLines 0
		--MarginLeftLines 1

	&Style
		&Position
			&Inside
				--ListStylePosition inside

			&Outside
				--ListStylePosition outside
				--MarginLeftLines -2

		&Type
			&None
				--ListStyleType none

				& > *:before
					display none

			&Disc
				--ListStyleType disc

			&Circle
				--ListStyleType circle

			&Square
				--ListStyleType square

			&Decimal, ^[0]:is(ol)
				--ListStyleType decimal
				--ListCounterSeparator '.'

			&DecimalLeadingZero
				--ListStyleType decimal-leading-zero
				--ListCounterSeparator '.'

			&LowerRoman
				--ListStyleType lower-roman
				--ListCounterSeparator '.'

			&UpperRoman
				--ListStyleType upper-roman
				--ListCounterSeparator '.'

			&LowerLatin
				--ListStyleType lower-latin
				--ListCounterSeparator '.'

			&UpperLatin
				--ListStyleType upper-latin
				--ListCounterSeparator '.'

			&LowerAlpha
				--ListStyleType lower-alpha
				--ListCounterSeparator '.'

			&UpperAlpha
				--ListStyleType upper-alpha
				--ListCounterSeparator '.'
